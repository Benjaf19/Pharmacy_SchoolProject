@using Usuario.Models
@model UsuarioViewModel

<h2>Editar Usuario</h2>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" id="id" name="id" value="@Model.Id" />

    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" value="@Model.Nombre" required><br><br>

    <label for="apellidos">Apellidos:</label>
    <input type="text" id="apellidos" name="apellidos" value="@Model.Apellidos" required><br><br>

    <label for="correo">Correo:</label>
    <input type="email" id="correo" name="correo" value="@Model.Correo"><br><br>

    <label for="contrasena">Contrase√±a:</label>
    <input type="password" id="contrasena" name="contrasena" value="@Model.Contrasena"><br><br>

    <label for="edad">Edad:</label>
    <input type="number" id="edad" name="edad" value="@Model.Edad"><br><br>

    <label for="rol">Rol:</label>
    <select id="rol" name="rol">
        @if(Model.Rol == "Admin"){
        <option value="Admin" selected>Admin</option>
        <option value="Normal" >Normal</option>
        }else{
            <option value="Admin" >Admin</option>
        <option value="Normal" selected>Normal</option>
        }
    </select><br><br>

    <input type="submit" value="Guardar cambios">
</form>
